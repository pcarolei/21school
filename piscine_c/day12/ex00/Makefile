SRC_NAME = ft_display_file.c
NAME = ft_display_file

all:
	@gcc -Wall -Wextra -Werror $(SRC_NAME) -o $(NAME)

clean:
	@rm -f $(NAME)

fclean: clean
	@rm -f $(NAME)